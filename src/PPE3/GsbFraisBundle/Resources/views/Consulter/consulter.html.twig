{% extends "::layout.html.twig" %}
{% block title %}
    {{ parent() }} Accueil
{% endblock %}
{% block body %}
    <div class="page-wrapper">
        <!-- Bread crumb -->
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-primary">CONSULTER</h3> </div>
            <div class="col-md-7 align-self-center">

            </div>
        </div>

        <div class="container-fluid">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>INFORMATIONS FICHE FRAIS</h4>

                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Etat</th>
                                    <th>Nombre justificatif</th>
                                    <th>Montant</th>
                                    <th>Date modification</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% set i = 1 %}
                                {% for fiche in lesFiches %}

                                    <tr>
                                        {% set explode =  fiche.dateModif|split('-') %}
                                        <td><span class="badge badge-primary">{{ i }}</span></td>
                                        <td>{{ fiche.etat.libelle }}</td>
                                        <td>{{ fiche.nbJustificatif }}</td>
                                        <td>{{ fiche.montant }}</td>
                                        <td class="color-primary">{{ explode[2]~'-'~explode[1]~'-'~explode[0] }}</td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>INFORMATIONS FRAIS FORFAIT</h4>

                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Etat</th>
                                    <th>Nombre justificatif</th>
                                    <th>Montant</th>
                                    <th>Date modification</th>

                                </tr>
                                </thead>
                                <tbody>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- footer -->
        </div>


        <footer class="footer"> Â© 2018 All rights reserved.  <a href="https://colorlib.com"></a></footer>
        <!-- End footer -->
    </div>
{% endblock %}

